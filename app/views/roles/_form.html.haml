= simple_form_for role, remote: true do |f|
  = f.input :position_id, as: :hidden
  = f.input :person,
    as: :string,
    autofocus: 'true',
    hint: "You can make an account for someone by entering their name & email"
  = f.button :submit, "Save"
  = link_to "Cancel", request.referer, class: 'toggle-adding-role'
