%li[role]
  - person = role.person
  - if orchestrates? role, :or_adjacent
    = mail_to person.email, '', class: 'mailto'
  = link_to person.name, person
  - if orchestrates? role, :or_adjacent
    = button_to 'X', role_path(role),
                     method: :delete,
                     class: "link",
                     remote: true,
                     title:  "Remove #{person.first_name} from being #{role.position.name} for #{role.position.issue}"
