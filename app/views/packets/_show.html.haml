%li.collapsed[packet]
  - if editor?
    %span.drag-handle-wrap
      %span.drag-handle &lt;&gt;
  %header
    %a{ :href => submission_url(packet.submission) }
      %h2.nocaps= sanitize(packet.submission.title)
  - show_score = show_score.nil? ? false : show_score
  = render :partial => 'submissions/body_and_footer', :locals => { :submission => packet.submission, :show_author => show_author, :packet => packet }
