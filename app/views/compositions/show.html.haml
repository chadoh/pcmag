- title(strip_tags(@composition.title), false)
%h2.composition.title
  = sanitize @composition.title
.composition.body
  = sanitize @composition.body
%p.composition.author 
  - if @composition.author_id
    = @composition.author.name
  - else
    = @composition.author_name

%p
  = link_to t('back'), compositions_path
  = link_to t('edit'), edit_composition_path(@composition)
