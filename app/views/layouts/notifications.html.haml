!!!
%html
  %head
    %meta(content="text/html; charset=UTF-8" http-equiv="Content-Type")
  %body{ :leftmargin => "0", :marginwidth => "0", :topmargin => "0", :marginheight => "0", :offset => "0", :style => "background-color: #ffffff;" }
    %table.background_table(width="100%" cellspacing="0" style="background-color: #ffffff;")
      %tr
        %td(valign="top" align="center")
          %table#content_table(cellspacing="0" cellpadding="0" width="600" style="border: 0px none #000000; margin-top: 10px;")
            %tr
              %td
                %table(width="600" cellpadding="0" cellspacing="0")
                  %tr
                    %td.header_bar{ :height => "150", :style => "background-color: #{@blue}; border-top: 0px none #333333; border-bottom: 0px none #ffffff; padding: 0px;" }
                      %div.header_bar{ :style => "padding: 0; font-size: 0;" }
                        %img{ :src => "#{@heading_image}", :border => "0", :style => "margin: 0; padding: 0;" }
                %table.body(width="600" cellpadding="20" cellspacing="0")
                  %tr
                    %td.default_text{ :valign => "top", :align => "left", :style => "font-size: 12px color: #333333; line-height: 150%; font-family: #{@font_family}; background-color: #ffffff; padding: 20px; border: 0px none #ffffff;" }
                      = yield
                  %tr
                    %td.footer_row{ :align => "left", :valign => "top", :style => "background-color: #{@green}; border-top: 0px none #ffffff; margin-top: 2em; padding: 20px;" }
                      %div.footer_text{ :style => "font-size: 10px; color: #333333; line-height: 100%; font-family: #{@font_family};" }
                        = yield(:footer)
