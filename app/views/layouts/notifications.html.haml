!!!
%html
  %head
    %meta(content="text/html; charset=UTF-8" http-equiv="Content-Type")
  %body{ :leftmargin => "0", :marginwidth => "0", :topmargin => "0", :marginheight => "0", :offset => "0", :style => "background-color: #ffffff;" }
    %table.background_table(width="100%" cellspacing="0" style="background-color: #ffffff;")
      %tr
        %td(valign="top" align="center")
          %table#content_table(cellspacing="0" cellpadding="0" width="600" style="border: 0px none #000000; margin-top: 10px;")
            %tr
              %td
                %table(width="600" cellpadding="0" cellspacing="0")
                  %tr
                    %td.header_bar{ :height => "150", :style => "background-color: #8bc7c7; border-top: 0px none #333333; border-bottom: 0px none #ffffff; padding: 0px;" }
                      %div.header_bar{ :style => "padding: 0; font-size: 0;" }
                        %img{ :alt => '', :src => "http://s3.amazonaws.com/pcmag/email_banner1.jpg", :border => "0", :style => "margin: 0; padding: 0;" }
                %table.body(width="600" cellpadding="20" cellspacing="0")
                  %tr
                    %td.default_text{ :valign => "top", :align => "left", :style => "font-size: 12px color: #333333; line-height: 150%; font-family: 'Helvetica Neue', Arial, Helvetica, sans-serif; background-color: #ffffff; padding: 20px; border: 0px none #ffffff;" }
                      = yield
