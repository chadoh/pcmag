= simple_form_for attendee, :remote => true, :html => { 'data-viewer' => current_person.email } do |f|
  = render :partial => 'error_messages'

  = f.input :person, :as => :string, :label => "Attendee", :input_html => { :value => attendee.last.name_and_email }
  = f.input :answer, :label => "<span class='name'></span> Answer"
  = f.button :submit
