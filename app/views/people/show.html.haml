- title @person.full_name
- unless @person == current_person || the_editor?
  = render :partial => 'about', :locals => { :person => @person }
- else
  - content_for :sidebar do
    = render :partial => 'about', :locals => { :person => @person }

  - if @person == current_person and @drafts.present?
    %section#drafts
      %header
        %h3 Drafts
        %p These need some final touches before submission.
      %ul.submissions
        - for draft in @drafts
          = render :partial => 'submissions/show', :locals => { :submission => draft, :collapsed => false }

  - if @submitted.present?
    %section#submitted
      %header
        %h3 Submitted
        %p These have been submitted but not yet scheduled for a meeting
      %ul.submissions
        - for submission in @submitted
          = render :partial => 'submissions/show', :locals => { :submission => submission, :collapsed => false }
