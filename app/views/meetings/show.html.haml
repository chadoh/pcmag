- title @meeting.question
%p= @meeting.when.strftime("A meeting held on %A, %d %B %Y at %I:%M %p")
- if editor?
  %p.actions
    = link_to t('.edit'), edit_meeting_path(@meeting)

%section#packet
  %header
    %h2 Submissions
  %ol.packets
    - for packet in @meeting.packets
      = render :partial => 'packets/show', :locals => { :packet => packet }
  - if the_coeditor?
    %p= link_to "Enter scores for everyone", scores_for_meeting_path(resource)

%section#attendance
  %header
    %h2 Attendance
  %ul.attendances
    - for attendance in @meeting.attendances
      = render :partial => 'attendances/show', :locals => { :attendance => attendance }

  - if editor?
    = simple_form_for [@meeting, Attendance.new] do |f|
      = render :partial => 'error_messages'

      = f.input :person, :as => :string, :label => "Attendee"
      = f.input :answer, :label => "<span class='name'></span> Answer"
      = f.button :submit

- javascript 'meetings'
