= semantic_form_for(@meeting) do |f|
  - if @meeting.errors.any?
    #errorExplanation
      %h3= "There #{pluralize_phrase(@meeting.errors.count, 'was an error', 'were some errors')}!"
      %ul
      - @meeting.errors.full_messages.each do |msg|
        %li= msg

  = f.inputs do
    = f.input :when
    = f.input :question
  = f.buttons do
    = f.commit_button
